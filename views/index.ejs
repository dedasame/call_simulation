<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Çağrı Simülasyonu</title>
  <style>
    /* ... */
  </style>
</head>
<body>
  <h1>Çağrı Simülasyonu</h1>
  <form action="/cagriYap" method="post">
    <button type="submit">Çağrı Yap</button>
  </form>

  <h2>Çağrı Geçmişi</h2>
  <table>
    <thead>
      <tr>
        <th>Çağrı Alıcı</th>
        <th>Süresi (saniye)</th>
        <th>Saat</th>
        <th>Çağrı ID</th>
      </tr>
    </thead>
    <tbody>
      <% callLog.forEach(call => { %>
        <tr>
          <td><%= call.recipient %></td>
          <td><%= call.duration %></td>
          <td><%= call.timestamp %></td>
          <td><%= call.callerId %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>

  <h2>Bekleyen Çağrılar</h2>
  <table>
    <thead>
      <tr>
        <th>Caller ID</th>
        <th>Time</th>
      </tr>
    </thead>
    <tbody>
      <% waitingCalls.forEach(waitingCall => { %>
        <tr>
          <td><%= waitingCall.callerId %></td>
          <td><%= waitingCall.timestamp %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>




